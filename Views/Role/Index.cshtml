@model IEnumerable<RoleViewModel>
@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>

<br />
<br />
<a  asp-action="Create" class="btn btn-primary">Create New Role </a>
<br />
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="name" placeholder="Search By Name" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn-success" />
        </div>


    </form>
</div>
<br />
@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(R=>R.Id)</th>
                <th>@Html.DisplayNameFor(R=>R.RoleName)</th>
                

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>

                    <Partial name="_ButtonsPartialView" model="@Role.Id">

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3> No Roles Found!!</h3>
    </div>
}

