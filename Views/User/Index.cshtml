@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Users</h1>

<br />
<div class="row justify-content-center align-items-center mt-5">
    <form asp-action="Index" class="row col-8 offset-1">
        <div class="col-8">
            <input type="text" class="form-control" name="email" placeholder="Search By Email" />
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn-success" />
        </div>


    </form>
</div>
<br />
@if (Model.Count() > 0)
{

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
@*                 <th>@Html.DisplayNameFor(U=>U.Id)</th>
 *@                <th>@Html.DisplayNameFor(U=>U.FName)</th>
                <th>@Html.DisplayNameFor(U=>U.LName)</th>
                <th>@Html.DisplayNameFor(U=>U.Email)</th>
                <th>@Html.DisplayNameFor(U=>U.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(U=>U.Roles)</th>

                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>
        </thead>

        <tbody>
            @foreach (var User in Model)
            {
                <tr>
@*                     <td>@User.Id</td>
 *@                    <td>@User.FName</td>
                    <td>@User.LName</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",",User.Roles)</td>

                        <Partial name="_ButtonsPartialView" model="@User.Id">

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3> No Users Found!!</h3>
    </div>
}
